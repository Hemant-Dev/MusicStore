@model IEnumerable<MusicStore.Models.Genre>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0 bg-dark"> 
        <div class="hero-section img-fluid text-center">
            <h1 class="text-white fw-bold">Music for <span class="text-danger">pro video</span> & <span class="text-danger"> film</span></h1>
            <p class="text-white">ELevate your creativity and inspire your audience with our curated catalog from the world's top production artists.</p>
            
