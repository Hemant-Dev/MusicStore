                    @*Here dynamically we are going to show our playlists*@
                        @*<h2 class="text-white">Title: @Model.Album.Title</h2>*@
                        @foreach (var item in Model)
                        {

                            <h3>Genre: @item.Name</h3>
                        }
                        
                </div>
            </div>
        </div>

        <div class="container" style="height: 60vh;">
            <div class="row h-100%">
                <div class="col col-md-6 my-5">
